<%= render "shared/navbar" %>

<div class="bg-main" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t4.ftcdn.net/jpg/04/09/70/87/360_F_409708782_HxuxOH8f7xSmj5p4ygbAbuJE74vGGj2N.jpg); padding-top:150px; min-height: 130vh;">
<h1 class="text-center mb-5">Find exciting gaming events near you!</h1>
  <div class="container d-flex">
      <div class="container flex-row">
        <div class="col-6">
          <% @events.each do |event| %>
            <div class="box" style="width: 150%">
            <span></span>
          <div class="content">
          <h5><img src="https://acegif.com/wp-content/uploads/2022/fzk5d/76-open-close-mouth.gif" width="20px" />
            <%= event.title %> </h5>
            <hr>
            <div id="show-more">
              <p> <%= event.desc %> </p>
            </div>
            <br>
            <div class="d-flex justify-content-between">
              <div style="font-weight: bold;">
                <%= event.venue  %> - <%=event.address%>
                <br>
                <%= event.date.strftime("%A, %d %b %Y at %l:%M %p GMT")  %>
              </div>
              </p>
              <%= link_to raw("<i class=\"fa-solid fa-trash-can\"></i>"), event_path(event), data: { turbo_method: :delete } %>

            </div>
          </div>
        </div>
        <% end %>


      </div>
      </div>
      <div class="container flex-row">
        <div class="rounded" style="width: 100%; height: 650px; border: 2px solid #10F6B7"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
        <%= link_to "Create New Event", new_event_path, class: "btn col-3 btn-secondary1", style:"text-decoration:none; color:#f9fafc; font-weight:bold; margin-top:4px"%>

      </div>
    </div>
  </div>
</div>
