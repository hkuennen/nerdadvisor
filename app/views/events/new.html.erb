<%= render "shared/navbar" %>

<div class="bg-main" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t4.ftcdn.net/jpg/04/09/70/87/360_F_409708782_HxuxOH8f7xSmj5p4ygbAbuJE74vGGj2N.jpg); padding-top:150px; min-height: 100vh;">
<div class="container" data-controller="coin-sound">
  <div class="detail-card">
    <div class="box box-show" id="box-application">
      <span></span>
      <div class="box-detail">
        <div>
          <h1 class="text-center" style="line-height: 2.5"> <strong> POST A NEW GAMING EVENT <br /></strong></h1>
            <h5 style="font-size:"><%= simple_form_for [@event] do |event| %>
              <%= event.input :title %>
              <%= event.input :date, as: :datetime, html5: true %>
              <%= event.input :venue %>
              <%= event.input :address %>
              <%= event.input :desc %>
              <%= event.input :photo, as: :file %>
              <%= event.submit "Submit", class: "btn col-3 btn-secondary1", style:"text-decoration:none; color:#f9fafc; font-weight:bold;" %>
            <% end %>
        </div>

        <div>
          <%= link_to "Back to all Events", events_path, class: "btn col-3 btn-secondary2", style:"text-shadow: 1px 1px #D217D9; text-decoration:none; color:#f9fafc; font-weight:bold;" %></h5>
        </div>
      </div>
    </div>
  </div>
</div>
