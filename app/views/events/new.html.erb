<%= render "shared/navbar" %>

<div class="bg-main main-paddin min-vh-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t4.ftcdn.net/jpg/04/09/70/87/360_F_409708782_HxuxOH8f7xSmj5p4ygbAbuJE74vGGj2N.jpg);">
  <div class="container" data-controller="coin-sound">
    <div class="detail-card">
      <div class="box box-show" id="box-application">
        <span></span>
        <div class="box-detail">
          <h1 class="text-center pb-4"> <strong> POST A NEW GAMING EVENT <br /></strong></h1>
              <h5><%= simple_form_for [@event] do |event| %>
                <%= event.input :title %>
                <%= event.input :date, as: :datetime, html5: true %>
                <%= event.input :venue %>
                <%= event.input :address %>
                <%= event.input :desc %>
                <%= event.input :photo, as: :file %>
                <%= event.submit "Submit", class: "btn col-3 btn-secondary1 mt-3 fw-bold text-light" %>
              <% end %>
          <%= link_to "Events", events_path, class: "btn col-3 mt-3 btn-secondary2 fw-bold text-light" %>
        </div>
      </div>
    </div>
  </div>
</div>
