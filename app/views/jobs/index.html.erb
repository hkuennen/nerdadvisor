<%= render "shared/navbar" %>

<div class="banner-home" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t4.ftcdn.net/jpg/04/09/70/87/360_F_409708782_HxuxOH8f7xSmj5p4ygbAbuJE74vGGj2N.jpg);">
  <div class="container-card">
    <% @jobs.each do |job| %>
    <div class="box">
      <span></span>
      <div class="content">
        <h2> <%= link_to job.title, job_path(job) %></h2>
        <p>
          As Sound Designer at Ubisoft, you will be working together with the team at Massive Entertainment
          to create a new story-driven open-world video game set in the Star Wars galaxy.
        </p>
        <a href="#">Apply Now!</a>
      </div>
    </div>
    <% end %>
  </div>
</div>
