<%= render "shared/navbar" %>

<div class="bg-main" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t4.ftcdn.net/jpg/04/09/70/87/360_F_409708782_HxuxOH8f7xSmj5p4ygbAbuJE74vGGj2N.jpg);">
<div class="container">
  <div class="detail-card">
    <div class="box box-show">
      <span></span>
      <div class="box-detail">
        <h2><%= @job.title %> at <%= @job.employer.companyName  %></h2><br>
        <p>
        <h4>COMPANY LOCATION</h4>
        <i><%= @job.employer.companyName  %>
        <br>
        <%= @job.employer.street  %>
        <br>
        <%= @job.employer.city  %> <%= @job.employer.postcode  %>
        <br><br>
        <h4>Start Date: <%= @job.startDate.strftime("%m/%Y")%></h4>
        <br>
        <h4>JOB DESCRIPTION</h4>

        <%= @job.desc  %> <br> <br>

        We thank you for your interest, however, only those candidates selected for an interview will be contacted. <strong>No agencies please.</strong>
        <br><br>
        </p>
        <%= link_to "Apply", new_job_application_path(params[:id])%>
        <a href="#">Save</a>
        <a href="#">Refer a friend</a>
      </div>
    </div>
  </div>
</div>
