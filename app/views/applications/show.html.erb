<%= render "shared/navbar" %>

<div class="bg-main" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t4.ftcdn.net/jpg/04/09/70/87/360_F_409708782_HxuxOH8f7xSmj5p4ygbAbuJE74vGGj2N.jpg); padding-top:150px; min-height: 120vh">
  <div class="container">
    <div class="detail-card">
      <div class="box box-show">
      <span></span>
        <div class="box-detail">
          <div class="pb-4">
            <%= cl_image_tag @application.employer.image.key, height: "40px" %>
          </div>
          <div class="line-hgt">
            <h2 class="pb-3">Application summary</h2>
            <p>Name: <em><%= "#{@application.user.firstName} #{@application.user.lastName}" %></em></p>
            <p>Job: <em><%= @application.job.title %></em></p>
            <p>Company: <em><%= @application.employer.companyName %></em></p>
            <p>Location: <em><%= @application.job.city %></em></p>
            <p># of applicants: <em><%= Application.where(job_id: @application.job.id).count %></em></p>
          </div>
          <div class="d-flex justify-content-around align-items-center">
            <div class="pt-4 pb-4">
              <% if @application.cv.attached? %>
                <p>CV uploaded:</p>
                <%= cl_image_tag @application.cv.key, width: "200px", class: "pdf" %>
              <% else %>
                <p class="txt-sm"><em>[No CV uploaded.]</em></p>
              <% end %>
            </div>
            <div class="pt-4 pb-4">
              <% if @application.coverLetter.attached? %>
                <p>Cover Letter uploaded:</p>
                <%= cl_image_tag @application.coverLetter.key, width: "200px", class: "pdf" %>
              <% else %>
                <p class="txt-sm"><em>[No Cover Letter uploaded.]</em></p>
              <% end %>
            </div>
          </div>
          <p><%= link_to "Check dashboard", pages_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>
