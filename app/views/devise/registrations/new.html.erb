<%= render "shared/navbar" %>

<div class="bg-main main-padding min-vh-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t4.ftcdn.net/jpg/04/09/70/87/360_F_409708782_HxuxOH8f7xSmj5p4ygbAbuJE74vGGj2N.jpg);">

  <div class="container w-50">

    <h2 style="color:$green;">Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs text-light">
        <div class="input-group justify-content-between">
          <%= f.input :firstName, 
                      required: true,
                      autofocus: true,
                      class: "form-control",
                      input_html: { autocomplete: "firstName" }%>
          <%= f.input :lastName, 
                      required: true,
                      autofocus: true,
                      class: "form-control",
                      input_html: { autocomplete: "lastName" }%>
        </div>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :role, as: :select, collection: ["Job Seeker", "Employer"],
                    required: true,
                    input_html: { autocomplete: "role" } %>
        <%= f.input :image,
                    as: :file,
                    required: true,
                    input_html: { autocomplete: "image" } %>
      </div>

      <div class="form-actions mb-2">
        <%= f.button :submit, "Sign up", class:"btn btn-success text-light" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
