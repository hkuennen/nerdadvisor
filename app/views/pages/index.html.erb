<%= render "shared/navbar" %>

<div class="bg-main" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t4.ftcdn.net/jpg/04/09/70/87/360_F_409708782_HxuxOH8f7xSmj5p4ygbAbuJE74vGGj2N.jpg); padding-top:80px">
<div class="container d-flex flex-row">
  <div class="mt-5">
    <img src="https://media2.giphy.com/media/lhvyCCcFuQFKo/giphy.gif" width="200px" />
  </div>

  <div class="row justify-content-center">
    <% @applications.each do |application| %>
      <div class="box" style="width:50%; height:260px">
        <span></span>
        <div class="content d-flex flex-row" style="gap: 20px">
          <div>
            <%= cl_image_tag application.employer.image.key, height: "40px" %>
          </div>
          <div>
            <h4> Application #<%= application.id  %></h4>
            <p> <%= application.job.employer.companyName  %></p>
            <p> <%= application.job.title  %></p>
            <p> <%= application.job._type  %>: â‚¬<%=application.job.salary%>/year </p>
            <p> You sent application on <%= application.created_at.strftime("%A, %d %b %Y at %l:%M %p GMT")  %></p>
            <%= link_to raw("<i class=\"fa-solid fa-trash-can\"></i>"), application_path(application), data: { turbo_method: :delete } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
