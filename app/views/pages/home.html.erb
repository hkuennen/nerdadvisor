<!-- First Parallax Section -->
<div class="paral paralsec">
  <div class="banner-home bg-image">
    <div class="container nav-margin">
      <div>
        <h1 class="text-center mb-4"><span data-controller="typed-js"></span></h1>
      </div>
      <div class="container">
        <%= form_tag jobs_path, method: :get do %>
        <div class="search">
          <div class="row">
            <div class="col-md-6">
              <div class="search-1">
                <i class='bx bx-search-alt'></i>
                  <%= text_field_tag :query, params[:query], placeholder: "Sound Designer"%>
              </div>
            </div>
            <div class="col-md-6">
              <div>
                <div class="search-2">
                  <i class='bx bxs-map' ></i>
                    <%= text_field_tag :query, params[:query], placeholder: "Berlin, Germany"%>
                  <button>Find Job</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

